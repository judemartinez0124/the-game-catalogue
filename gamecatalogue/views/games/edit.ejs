<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/form.css"> 
<h1 class="text-center my-3">EDIT ENTRY</h1>
<div id="card" class="card p-4 shadow-lg">
    <form class="row g-3" action="/games/<%= game._id %>?_method=PUT" method="POST">
        <div class="col-md-6">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="game[title]" id="title" value="<%= game.title %>">
        </div>
        <div class="col-md-6">
            <label class="form-label" for="developer">Developer</label>
            <input class="form-control" type="text" name="game[developer]" id="developer" value="<%= game.developer %>">
        </div>
        <div class="col-md-6">
            <label class="form-label" for="release">Release Year</label>
            <input class="form-control" type="number" name="game[release]" id="release" value="<%= game.release %>">
        </div>
        <div class="col-md-6">
            <label for="platform" class="form-label">Platform</label>
            <select name="game[platform]" id="platform" class="form-select">
                <% for(let platform of platforms){ %> 
                    <option value="<%= platform %>" <%= game.platform === platform ? 'selected' : '' %> ><%= platform %></option>
                <% } %> 
            </select>
        </div> 
        <div class="col-md-6">
            <label for="genre" class="form-label">Genre</label>
            <select name="game[genre]" id="genre" class="form-select">
                <% for(let genre of genres){ %> 
                    <option value="<%= genre %>" <%= game.genre === genre ? 'selected' : '' %> ><%= genre %></option>
                <% } %> 
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label" for="rating">Rating</label>
        <input class="form-control" type="number" name="game[rating]" id="rating" value="<%= game.rating %>">
        </div>
        <div>
            <label class="form-label" for="review">Review</label> <br>
            <textarea class="form-control" name="game[review]" id="review" cols="30" rows="10"><%= game.review %></textarea>
        </div>
        <div class="col-12">
          <button id="btn" class="btn btn-lightshadow-md my-2 px-4 shadow">Update Entry</button>
        </div>
      </form>
      <div>
        <a id="delete" href="/games/<%= game._id %>" class="btn btn-lightshadow-md my-2 px-4 shadow">Cancel</a>
    </div>
</div>